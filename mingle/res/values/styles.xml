<resources>
	
	<style name="thin_ab_style" parent="android:Widget.Holo.ActionBar">
        <item name="android:height">@dimen/action_bar_height</item>
    </style>
     <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
		<item name="android:displayOptions">showCustom</item>
		<item name="android:homeAsUpIndicator">@drawable/back_btn_wrapper</item>
		<item name="android:selectableItemBackground">@color/titlebackgroundcolor</item>
		<item name="android:icon">@color/trans</item>
		<item name="android:logo">@color/trans</item>
		<item name="android:height">@dimen/action_bar_height</item>
		<item name="android:title"></item>
        <!-- Support library compatibility -->
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
    </style>

    
    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs"
           parent="@style/Widget.AppCompat.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@color/actionbar_gray</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_margin">15dp</item>
		<item name="android:padding">11dp</item>
        <!-- Support library compatibility -->
        <item name="background">@color/light_gray</item>
    </style>
	<!--  
    <style name="WhiteTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#FFFFFF</item>
    </style>
    -->
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
         <item name="android:background">@color/titlebackgroundcolor</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:background">@color/titlebackgroundcolor</item>
	<item name="actionBarDivider">@null</item>
        
    </style>
    
    <!--  Title Bar Theme -->
    <style name="MainTheme" parent="android:Theme.Light">
        <item name="android:windowTitleSize">@dimen/title_bar_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item> 
         
	</style>
	
    <style name="ProfileTheme" parent="android:Theme.Light">
        <item name="android:windowTitleSize">@dimen/title_bar_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item> 
	</style>
   
	
    <!--  Chat Room Theme -->
	<style name="ChatRoomTheme" parent="android:Theme.Light">
        <item name="android:windowTitleSize">50dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item> 
	</style>
	
	<!--  Photo View Theme -->
	<style name="PictureViewTheme">
    	
    	<item name="android:background">#FFEAEAEA</item>
	</style>
	
    <style name="WindowTitleBackground">     
        <item name="android:background">@color/titlebackgroundcolor</item>                   
    </style>
    
    <!--  Swipe list view theme -->
	<style name="MyListBackContent">
       <item name="android:layout_width">fill_parent</item>
       <item name="android:layout_height">fill_parent</item>
       <item name="android:background">@drawable/background_back</item>
       <item name="android:gravity">right</item>
   </style>
 
   <style name="MyListFrontContent">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:background">@drawable/background_front</item>
       <item name="android:cropToPadding">true</item>
       <item name="android:padding">1dp</item>
   </style>
   
   <style name="ProfileListContent">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">wrap_content</item>
       
       <item name="android:background">@drawable/background_front</item>
   </style>
 
     <style name="MyListButtonAction">
       <item name="android:layout_margin">5dp</item>
         <item name="android:layout_width">80dp</item>
       <item name="android:layout_height">30dp</item>
 
   </style>
 
     <style name="UserListImage">
       <item name="android:layout_width">fill_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:gravity">center</item>
       <item name="android:layout_margin">3dp</item>
       <item name="android:adjustViewBounds">true</item>
        
   </style>
   <style name="VoteProfileBackground">
       <item name="android:layout_width">65dp</item>
       <item name="android:layout_height">fill_parent</item>
       <item name="android:scaleGravity">fill</item>
       <item name="android:background">@color/light_gray</item>
   </style>
     
     <style name="VoteProfileImage">
       <item name="android:layout_width">65dp</item>
       <item name="android:layout_height">fill_parent</item>
       <item name="android:scaleGravity">fill</item>
       <item name="android:layout_marginRight">8dp</item>
   </style>
   <style name="ChatRoomImage">
       <item name="android:layout_width">50dp</item>
       <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/choice_cell_border</item>
        <item name="android:layout_centerVertical">true</item>
       <item name="android:layout_margin">@dimen/small_margin</item>
   </style>
 
   <style name="MyListTitle">
       <item name="android:paddingBottom">8dp</item>
       <item name="android:textSize">17sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:maxLines">2</item>
       <item name="android:ellipsize">end</item>
   </style>
   <style name="ChatRoomRank">
       <item name="android:layout_alignParentTop">true</item>
       <item name="android:layout_alignParentLeft">true</item>
       <item name="android:layout_width">15dp</item>
       <item name="android:layout_height">15dp</item>
   </style>
  
   <style name="Theme.Transparent" parent="android:Theme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style>
 <style name="MsgStyle">
       <item name ="android:textSize">16sp</item>
       <item name ="android:textColor">@color/black</item>
       <item name ="android:shadowColor">@color/black</item>
       <item name ="android:shadowDx">1</item>
       <item name ="android:shadowDy">1</item>
   </style>
 <style name="Theme.Intro" parent="android:Theme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">true</item>
	<item name="android:backgroundDimAmount">0.5</item>
  </style>
 
 <style name="Theme.SplashScreen" parent="AppBaseTheme">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@color/titlebackgroundcolor</item>
 </style>

</resources>
