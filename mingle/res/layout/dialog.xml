<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/titlebackgroundcolor"
    android:orientation="vertical" >
    
	<com.example.mingle.RoundedImageView
		style="@style/ChatRoomImage"
	    android:id="@+id/noti_sender_image"/>
	
	<TextView
    	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/noti_sender_image"
        android:layout_alignTop="@id/noti_sender_image"
        style="@style/MyListTitle"
        android:id="@+id/noti_sender_name"/>
	
	<TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/noti_sender_image"
        android:layout_below="@id/noti_sender_name"
        style="@style/MyListTitle"
        android:id="@+id/noti_msg"/>
	    
</RelativeLayout>
