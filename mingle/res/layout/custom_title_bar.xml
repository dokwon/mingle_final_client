<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent" 
	android:background="@drawable/title_border"
	android:id="@+id/customTitleLayout">

	<ImageView 
	    android:layout_height="@dimen/main_logo_width" 
	    android:layout_width="@dimen/main_logo_height"  
	    android:id="@+id/titleLogo" 
	    android:src="@drawable/mingle_logo" 
	    android:paddingTop="7dp"
	    android:paddingBottom="7dp"
	    android:contentDescription="@string/photo_description"
	    android:layout_centerHorizontal="true" 
	    android:layout_alignParentTop="true"/>
	

	<Button 
	    android:layout_height="52px" 
	    android:layout_width="52px" 
	    android:id="@+id/preview_button" 
	    android:background="@drawable/setting"
	    android:layout_margin="27px"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:onClick="showPreview"/>

</RelativeLayout>
