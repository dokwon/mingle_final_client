<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="270dp"
        android:layout_height="290dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dip"
        android:layout_marginTop="38dp" >
    </ViewFlipper>

    <TextView
        android:id="@+id/profile_user_num"
        style="@style/MyListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_flipper"
        android:layout_below="@+id/view_flipper"/>

    <TextView
        android:id="@+id/profile_user_name"
        style="@style/MyListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/profile_user_num"
        android:layout_alignBottom="@+id/profile_user_num"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/profile_user_num"/>
    
    <Button
        android:id="@+id/vote_button"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_flipper"
        android:layout_below="@+id/profile_user_num"
        android:onClick="voteUser"
        android:text="Vote" />
    
    <Button 
	    android:layout_height="wrap_content" 
	    android:layout_width="130dp" 
	    android:id="@+id/chat_button" 
	    android:layout_alignBaseline="@+id/vote_button"
        android:layout_alignBottom="@+id/vote_button"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/vote_button"
	    android:text="Chat" 
	    android:onClick="startChat"/>

</RelativeLayout>
