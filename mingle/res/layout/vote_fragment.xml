<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titlebackgroundcolor"
    android:orientation="vertical" >
    
    
    <RelativeLayout
        android:id="@+id/question_wrapper"
  android:paddingBottom="@dimen/activity_vertical_margin" 
  android:paddingTop="@dimen/activity_vertical_margin" 
  android:paddingRight="@dimen/activity_horizontal_margin" 
  android:paddingLeft="@dimen/activity_horizontal_margin" 
  android:layout_height="wrap_content" 
  android:layout_width="wrap_content" >
    
    
    <ImageView
       android:id="@+id/daily_question_logo_vote"
       android:layout_width="@dimen/question_logo_size"
       android:layout_height="@dimen/question_logo_size"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:background="@drawable/themelike" />
	
	    <LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:baselineAligned="false"
		    android:layout_marginLeft="@dimen/small_margin"
		   
		    android:background="@drawable/votecomment"
		    android:layout_toRightOf="@+id/daily_question_logo_vote"
		 	android:layout_alignTop="@+id/daily_question_logo_vote"
			android:layout_alignBottom="@+id/daily_question_logo_vote"
			android:layout_marginRight="@dimen/activity_horizontal_margin"
		    android:orientation="vertical" >
	    
			    <TextView
			        android:id="@+id/daily_question_vote"
			        android:layout_height="wrap_content" 
				 	android:layout_width="wrap_content"
				 	android:layout_marginLeft="10dp"
			 		android:layout_marginRight="10dp"
			 		android:layout_marginTop="7dp"
				 	android:maxHeight="30dp"
				 	android:textSize="17sp"
				 	android:ellipsize="end"
				 	android:maxLines="1"
				 	/>
			    <TextView
			        android:layout_height="wrap_content" 
				 	android:layout_width="wrap_content"
				 	android:layout_marginRight="30dp"
				 	android:layout_marginLeft="10dp"
				 	android:maxHeight="30dp"
				 	android:maxLines="1"
				 	android:layout_marginTop="3dp"
				 	android:textSize="15sp"
				 	android:textColor="#FF4444"
	       			android:ellipsize="end"
				 	android:text="@string/vote_time_notif"
				 	/>
	  	</LinearLayout>
    </RelativeLayout>
    
   <LinearLayout
		android:orientation="horizontal"
		android:baselineAligned="false"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<RelativeLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="fill_parent">

			<ImageView
			    android:id="@+id/femaleTopLogo"
			    android:layout_width="@dimen/question_logo_size"
			    android:layout_height="@dimen/question_logo_size"
			    android:layout_marginTop="5dp"
			    
			    android:layout_centerInParent="true"
			    android:src="@drawable/queen_symbol" />

		</RelativeLayout>
		<RelativeLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="fill_parent">
				<ImageView
				    android:id="@+id/maleTopLogo"
				    android:layout_width="@dimen/question_logo_size"
				    android:layout_height="@dimen/question_logo_size"
				    android:layout_marginTop="5dp"
				    
				    android:layout_centerInParent="true"
				    android:src="@drawable/king_symbol" />
		</RelativeLayout>
	</LinearLayout>

   <ImageView
		android:id="@+id/vote_error_page"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="50dp"
		android:layout_gravity="center"
		android:src="@drawable/vote_time_error" >
	</ImageView>  
   
	<ListView
		android:id="@+id/top_list"
		android:layout_width="fill_parent"
		android:layout_height="0dip"
		android:divider="@null"
		android:layout_weight="4.13" >
	</ListView>  
		    			
		            	  
</LinearLayout>
