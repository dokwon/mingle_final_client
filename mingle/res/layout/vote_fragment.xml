<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titlebackgroundcolor"
    android:orientation="vertical" >
    
   <LinearLayout
		android:orientation="horizontal"
		android:baselineAligned="false"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<RelativeLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="fill_parent">

			<ImageView
			    android:id="@+id/femaleTopLogo"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="5dp"
			    android:padding="35dp"
			    android:layout_centerInParent="true"
			    android:src="@drawable/queen_symbol" />

		</RelativeLayout>
		<RelativeLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="fill_parent">
				<ImageView
				    android:id="@+id/maleTopLogo"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="5dp"
				    android:padding="35dp"
				    android:layout_centerInParent="true"
				    android:src="@drawable/king_symbol" />
		</RelativeLayout>
	</LinearLayout>

	<ListView
		android:id="@+id/top_list"
		android:layout_width="fill_parent"
		android:layout_height="0dip"
		android:layout_weight="4.13" >
	</ListView>  
		    			
		            	  
</LinearLayout>
